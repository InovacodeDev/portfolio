{
    "extends": "@inovacode/tsconfig/base.json",
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "noEmit": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2021",
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
