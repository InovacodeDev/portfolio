<html lang="pt-BR">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <style>
            @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap");
            :root {
                --bg: #1e1e1e;
                --card: #2a2a2a;
                --text: #f5f5f5;
                --accent: #a2b9d1;
            }
            body {
                font-family:
                    Inter,
                    system-ui,
                    -apple-system,
                    "Segoe UI",
                    Roboto,
                    Arial;
                background: var(--bg);
                color: var(--text);
                margin: 0;
                padding: 24px;
            }
            .container {
                max-width: 700px;
                margin: 0 auto;
            }
            .card {
                background: var(--card);
                border-radius: 12px;
                padding: 28px;
            }
            .header {
                display: flex;
                gap: 12px;
                align-items: center;
            }
            .logo {
                height: 48px;
            }
            h1 {
                font-size: 20px;
                margin: 0 0 8px 0;
            }
            p {
                margin: 8px 0;
            }
            .meta {
                font-size: 13px;
                opacity: 0.85;
                color: var(--accent);
            }
            .message {
                white-space: pre-wrap;
                background: rgba(0, 0, 0, 0.06);
                padding: 12px;
                border-radius: 6px;
                margin-top: 12px;
            }
            .footer {
                margin-top: 18px;
                font-size: 12px;
                opacity: 0.8;
            }
            a {
                color: var(--accent);
                text-decoration: none;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="card">
                <div class="header">
                    <img class="logo" src="{{logoUrl}}" alt="Inovacode logo" />
                    <div>
                        <h1>Nova mensagem de contato</h1>
                        <div class="meta">ID: {{contactId}} â€¢ Enviado em: {{timestamp}}</div>
                    </div>
                </div>

                <hr style="border:none;border-top:1px solid rgba(255,255,255,0.06);margin:16px 0" />

                <p><strong>Nome:</strong> {{name}}</p>
                <p><strong>Email:</strong> <a href="mailto:{{email}}">{{email}}</a></p>

                <div class="message">{{{messageHtml}}}</div>

                <div class="footer">Visite <a href="{{siteUrl}}">{{siteUrl}}</a> para mais detalhes.</div>
            </div>
        </div>
    </body>
</html>