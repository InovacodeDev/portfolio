{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "React",
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "jsx": "react-jsx",
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src/**/*",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}