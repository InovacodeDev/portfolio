{
    "version": 2,
    "buildCommand": "turbo run build --filter=@shop-wise/web",
    "outputDirectory": "dist",
    "framework": null,
    "env": {
        "SERVERLESS": "true"
    },
    "functions": {
        "apps/api/api/index.js": {
            "runtime": "nodejs20.x"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/apps/api/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/apps/web/$1"
        }
    ]
}