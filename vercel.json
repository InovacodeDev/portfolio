{
    "version": 2,
    "builds": [
        {
            "src": "apps/api/api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "apps/web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "env": {
        "SERVERLESS": "true"
    },
    "functions": {
        "apps/api/api/index.js": {
            "runtime": "nodejs20.x"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/apps/api/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/apps/web/$1"
        }
    ]
}