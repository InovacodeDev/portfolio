{
    "version": 2,
    "buildCommand": "pnpm turbo run build --filter=@inovacode/web --filter=@inovacode/api && cp -r apps/web/dist ./dist",
    "outputDirectory": "dist",
    "installCommand": "pnpm install",
    "functions": {
        "apps/api/api/index.js": {
            "runtime": "nodejs20.x"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/apps/api/api/index.js"
        }
    ]
}