{
    "version": 2,
    "buildCommand": "turbo run build",
    "builds": [
        {
            "src": "apps/web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "apps/api/api/index.js",
            "use": "@vercel/node"
        }
    ],
    "env": {
        "SERVERLESS": "true"
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/apps/api/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/apps/web/dist/$1"
        }
    ]
}